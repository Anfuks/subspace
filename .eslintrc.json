{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": [
    "eslint-plugin",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ]
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-async-promise-executor": "warn",
    "@typescript-eslint/prefer-readonly": [
      1,
      {
        "onlyInlineLambdas": true
      }
    ]
  }
}
